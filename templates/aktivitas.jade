{% extends 'masuk.jade' %}

{% block breadcrumb %}
ul.breadcrumb
	li
		a(href="/"+ organisasi.kode + "/") 
			i.icon-home
			|  Depan
		span.divider /
	li 
		a(href="/"+ organisasi.kode + "/kolega/" + kolega.kode + "/") 
			{{ kolega.nama }}
		span.divider /
	li 
		| Aktivitas
{% endblock breadcrumb %}


{% block body %}

h2 {{ kolega.nama }} : Aktivitas

h4 Aktivitas berlangsung
{% if not aktivitas_berlangsung_grup %}
| Tidak ada aktivitas yang sedang berlangsung
{% else %}

{% for aktivitas_berlangsung in aktivitas_berlangsung_grup %}
p 
	a(href= aktivitas_berlangsung.pk)
		{{ aktivitas_berlangsung.dibuat }}: {{ aktivitas_berlangsung.nama}}

{% endfor %}

{% endif %}
br 
br

h4 Aktivitas selesai

{% if not aktivitas_selesai_grup %}
| Tidak ada aktivitas yang sudah selesai

{% else %}

{% for aktivitas_selesai in aktivitas_selesai_grup %}
p 
	a(href= aktivitas_selesai.pk)
		{{ aktivitas_selesai.dibuat }}: {{ aktivitas_selesai.nama}}

{% endfor %}

{% endif %}

{% endblock body %}